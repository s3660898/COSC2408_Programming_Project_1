@{
    ViewData["Title"] = "Home Page";
}

<style>
    .frost {
        background-image: url("/img/car2.png");
        background-repeat: no-repeat;
        background-attachment: scroll;
        background-size: 100%, auto;
        background-position: 50% 50%;
        filter: blur(14px) grayscale(50%);
        transform: scale(1.03);
        z-index: 0;
        height: 25em
    }

    .carimg {
        height: 25em;
        z-index: 10;
        overflow: hidden;
        position: absolute;
        top: 0;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome to UrbanHire!</h1>
    <p class="h3 font-weight-light">Here you can find all sorts of information and pictures about why you should join UrbanHire!</p>
    <div style="position: relative; margin-bottom:4em; margin-top:2em;">
        <div style="overflow:hidden">
            <div class="frost"></div>
        </div>

        <div class="d-flex justify-content-around">
            <img src="~/img/car2.png" class="carimg" />
        </div>
    </div>

    <p class="h3 font-weight-light">Find out how our users really feel about UrbanHire:</p>

    <div style="margin-top: 4em;">
        <blockquote class="blockquote text-center">
            <p class="mb-0">I didn't really know who I was, until I used UrbanHire.</p>
            <footer class="blockquote-footer">Someone famous</footer>
        </blockquote>

        <blockquote class="blockquote text-center">
            <p class="mb-0">UrbanHire fixed my marriage.</p>
            <footer class="blockquote-footer">Mark</footer>
        </blockquote>

        <blockquote class="blockquote text-center">
            <p class="mb-0">I liked the purple car.</p>
            <footer class="blockquote-footer">SportsCarFan123</footer>
        </blockquote>
    </div>

</div>
