@model CarShare.Identity.Data.CarShareUser
@{
    ViewData["Title"] = "ViewUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View User</h1>
<div align="right" style="margin-bottom: 0.5rem">
    <a id="editButton" class="btn btn-primary" style="margin-right: 1rem" asp-controller="Admin" asp-action="EditUserDetails">Edit User Details</a>
    <a id="deleteButton" class="btn btn-primary" href="#">Delete User</a>
</div>
@*Creates the ViewUser table for each user, visible when the administrator clicks the "View" button in the User Management table*@
<table class="table">
    <tr>
        <td>Email:</td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Address:</td>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <td>User Status:</td>
        <td>@Model.UserStatus</td>
    </tr>
</table>


